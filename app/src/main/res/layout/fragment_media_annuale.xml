<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ededed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/mediaAnnuale"
        android:textSize="60dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/msgMediaNonDisp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/varMediaAnnuale"
        android:layout_below="@+id/mediaAnnuale"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/layout_tv_ma_mnd"
        android:id="@+id/msgMediaNonDisp"
        android:singleLine="false"
        android:textIsSelectable="false"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:phoneNumber="false"
        android:textColor="#ff7b7b7b"
        android:gravity="center"
        android:textSize="15dp"
        android:typeface="normal"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:layout_alignTop="@+id/msgMediaNonDisp"
        android:layout_marginTop="100dp" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imgUD"
        android:layout_alignBottom="@+id/varMediaAnnuale"
        android:layout_toStartOf="@+id/varMediaAnnuale"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        android:visibility="invisible" />
</RelativeLayout>