<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MATEMATICA"
        android:id="@+id/tv_corso"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5.5"
        android:id="@+id/tv_media"
        android:layout_alignBottom="@+id/tv_corso"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textSize="13dp" />

    <view
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:background="#FF909090"
        class="android.support.v4.widget.DrawerLayout"
        android:id="@+id/separatore"
        android:layout_toStartOf="@+id/tv_media"
        android:layout_alignTop="@+id/tv_media"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/tv_media"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5.5"
        android:id="@+id/tv_diff_media"
        android:textSize="13dp"
        android:layout_alignTop="@+id/separatore"
        android:layout_toStartOf="@+id/separatore"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/separatore" />

</RelativeLayout>