<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MATEMATICA"
        android:id="@+id/tv_corso_voto"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20 maggio"
        android:id="@+id/tv_data_voto"
        android:textSize="12dp"
        android:layout_below="@+id/tv_corso_voto"
        android:layout_alignStart="@+id/tv_corso_voto"
        android:layout_alignLeft="@+id/tv_corso_voto"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5.50"
        android:id="@+id/tv_punteggio_voto"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/tv_data_voto"
        android:layout_alignParentEnd="true" />


</RelativeLayout>